{
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "node"
      ],
      "matchDepTypes": [
        "engines"
      ]
    },
    {
      "matchManagers": [
        "dockerfile"
      ],
      "matchPackageNames": [
        "node"
      ]
    },
    {
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "matchPackagePatterns": [
        "*"
      ],
      "matchManagers": [
        "npm"
      ],
      "matchFileNames": [
        "package.json"
      ],
      "enabled": true
    }
  ]
}